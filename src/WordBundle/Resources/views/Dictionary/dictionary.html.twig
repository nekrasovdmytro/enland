{% extends 'base.html.twig' %}

{% block title %}{{ seo.getTitle() }}{% endblock %}
{% block description %}{{ seo.getDescription() }}{% endblock %}
{% block keywords %}{{ seo.getKeywords() }}{% endblock %}

{% block stylesheets %}
    {% stylesheets '@WordBundle/Resources/public/css/*' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h1><span class="label label-success">{{ letter | upper }}</span> | {% trans %}ru-en{% endtrans %}</h1>
        </div>
	<div class="col-md-6">
		<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- city -->
<ins class="adsbygoogle"
     style="display:inline-block;width:100%;height:90px"
     data-ad-client="ca-pub-6448372095392587"
     data-ad-slot="2109205753"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script>
	</div>
    </div>

    <div class="row">
        <div class="col-md-1 col-md-offset-11">
            {% if p > 0 %}
                <span class="label label-info">
                    {% trans %}Page{% endtrans %} {{ p }}
                </span>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                {% for w in words %}
                    <div class="col-md-3">
                        <a href="/word/{{ w.translate | lower | replace({' ' : '_'}) }}">{{ w.translate | capitalize }}</a>

                        {{ w.transcription | raw }}

                        - {{ w.word | lower }}


                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a {% if p - 1 < 0 %} disabled="disabled" {% endif %}  type="button" class="btn btn-info" href="{% if p - 1 >= 0 %}?p={{ p - 1 }}{% else %}#{% endif %}" title="{% trans %}Prev{% endtrans %} {{ p - 1 }}">{% trans %}Prev{% endtrans %}</a>

            <a {% if up %} disabled="disabled" {% endif %} type="button" class="btn btn-info" href="{% if not up %}?p={{ p + 1}}{% else %}#{% endif %}" title="{% trans %}Page{% endtrans %} {{ p + 1}}">{% trans %}Next{% endtrans %}</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for a in alphabet %}
                <a class="btn btn-primary" type="button" href="/dictionary/{{ lang }}/{{ a|lower }}">{{ a }}</a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
