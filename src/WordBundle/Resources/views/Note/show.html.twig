{% extends 'base.html.twig' %}

{% block title %}{{ seo.getTitle() }}{% endblock %}
{% block description %}{{ seo.getDescription() }}{% endblock %}
{% block keywords %}{{ seo.getKeywords() }}{% endblock %}

{% block stylesheets %}
    {% stylesheets '@WordBundle/Resources/public/css/*' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-10">
            <h1>{{ article.header }}</h1>
        </div>
        <div class="col-md-2">
            <a href="/add-notice" type="button" class="btn btn-danger pull-right">{% trans %}Add notice{% endtrans %}</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <hr class="underline"/>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
		<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- city -->
<ins class="adsbygoogle"
     style="display:inline-block;width:100%;height:90px"
     data-ad-client="ca-pub-6448372095392587"
     data-ad-slot="2109205753"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script>
            {{ article.text | raw }}
        </div>

        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12 header-line">
                    {% trans %}Another articles{% endtrans %}
                </div>
            </div>
            {% for a in another %}
            <div class="row">
                <div class="col-md-12">
                    <a alt="{{ a.header }}" title="{{ a.header }}" href="/n/{{ a.url }}"><img class="img-responsive img-rounded" width="100%" src="/uploads/{{ a.image }}"></a>
                    <a href="/n/{{ a.url }}">{{ a.header }}</a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <hr>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="col-md-4">

            <div class="row">
                <div class="col-md-12">
                    <a href="/notice" type="button" class="btn btn-{% if category == 0 %}default{% else %}info{% endif %}">All</a>
                    {% for c in categories %}
                        <a href="/notice?category={{ c.id }}" type="button" class="btn btn-{% if category == c.id  %}default{% else %}info{% endif %}">{{ c.name }}</a>
                    {% endfor %}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 header-line">
                    {% trans %}Additional words{% endtrans %}
                </div>
            </div>
            <div class="row">
                {% for w in words %}
                    <div class="col-md-6">
                        <a href="/word/{{ w.translate | lower | replace({' ' : '_'}) }}">{{ w.translate | capitalize }}</a>

                        {{ w.transcription | raw }}

                        - {{ w.word | lower }}


                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
